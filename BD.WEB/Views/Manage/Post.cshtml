@model IEnumerable<BD.WEB.Models.PostVM>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12" style="padding-top:20px">
        <div class="col-lg-12"><h4>All Post</h4> </div>
        <div class="col-lg-12">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Headline</th>
                        <th>Description</th>
                        <th>Location</th>
                        <th>Date</th>
                        <th>Blood Group</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <div class="text-center">No post found</div>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Headline</td>
                                <td>@item.Description</td>
                                <td>@item.Location</td>
                                <td>@item.AddDate</td>
                                <td>@item.BloodGroup</td>
                                <td><a asp-controller="Manage" asp-action="DeletePost" asp-route="@item.ID">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>