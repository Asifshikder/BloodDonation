@model IEnumerable<BD.WEB.Models.PostVM>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12" style="padding-top:20px">
        <div class="col-lg-7"><h4>Peoples are looking for blood</h4><br />Help them </div>
        <div class="col-lg-5"><a href="/Post/Create" class="btn custom-btn">Need Blood? Create a Post</a> </div>
        <div class="col-lg-12">
            @if (Model.Count() == 0)
            {
                <div class="text-center">No post found</div>
            }
            else
            {
                @foreach(var item in Model)
                {
                    <div><h5>@item.Headline</h5></div>
                    <div><p>@item.Description</p></div>
                    <div><p>@item.Location</p></div>
                    <div><p>@item.BloodGroup</p></div>
                }
            }
        </div>
    </div>
</div>