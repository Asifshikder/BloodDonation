@model BD.WEB.Models.ACCVM.PasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="row">
    <div class="col-lg-12">
        <form asp-controller="Account" asp-action="ChangePasswordConfirm" method="post">
            <div class="row" style="padding:12px;background-color:white;font-size:small">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <div class="text-center">
                        <h5><b>Change password</b></h5>
                        <h7>Remember the password so that you can login later.</h7>
                    </div>
                    <div class="">
                        <label>OLD PASSWORD</label>
                        <br />
                        <input asp-for="OldPassword" class="form-control" required type="password" placeholder="Enter your old  password">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="OldPassword" style="color:yellow"></span>
                    </div>
                    <div class="">
                        <label>NEW PASSWORD</label>
                        <br />
                        <input asp-for="Password" required type="password" class="form-control" placeholder="Enter your new password">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Password" style="color:yellow"></span>
                    </div>
                    <p style="color:red">@Html.DisplayFor(model => Model.Errormessage)</p>
                    <div class="form-group">
                        @Html.HiddenFor(model => Model.UserID)
                        @Html.HiddenFor(model => Model.BaseCode)
                    </div>
                    <div style="padding-top:30px;">
                        <input type="submit" class="btn btn-block btn-primary" value="Submit">
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-12 text-center">
                                <a href="/Account/ForgotPassword" class="btn custom-btn">Forgot password?</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1"></div>

            </div>
        </form>
    </div>
</div>
