@model BD.WEB.Models.ACCVM.PasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="row">
    <div class="col-lg-12">
        <form asp-controller="Account" asp-action="ResetPasswordConfirm" method="post">
            <h5><b>Set new password</b></h5>
            <br />
            <div class="form-group">
                <label for="user" class="text-capitalize">New Password</label>
                <input id="user" asp-for="Password" required type="text" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => Model.UserID)
            @Html.HiddenFor(model => Model.BaseCode)
            <div class="form-group" style="padding-top:30px">
                <input type="submit" class="btn btn-block custom-btn" value="Save" style="color:white">
            </div>
        </form>
    </div>
</div>