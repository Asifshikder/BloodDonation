@model IEnumerable<BD.WEB.Models.DonorVM>
@{
    ViewData["Title"] = "Search";
}

<div class="row">
    <div class="text-center">
        <div class="text-capitalize">
            <h4 style="color:#0078d4"><b>@ViewBag.Message</b></h4>
        </div>
    </div>
</div>
<div class="row">
    @if (Model.Count() == 0)
    {
        <div class="text-center">
            <div class="text-danger">
                <h5><b>No donor found!</b></h5>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <table class="table">
                <thead style="background-color:#0078d4">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Contact</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>@item.FullName</tr>
                        <tr>@item.Address</tr>
                        <tr>@item.Contact<br />@item.Contact2</tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>